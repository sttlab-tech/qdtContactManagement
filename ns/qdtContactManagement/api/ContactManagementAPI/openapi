components:
  schemas:
    PaginatedContacts:
      required:
      - itemCount
      type: object
      properties:
        itemCount:
          type: integer
          description: The total number of contacts available.
          example: 2
        hasMore:
          type: boolean
          description: Indicates if there are more contacts to load.
          example: false
          default: false
        contacts:
          maxItems: 2000
          minItems: 0
          type: array
          description: A list of contacts.
          items:
            $ref: '#/components/schemas/Contact'
    Contact:
      required:
      - email
      - firstName
      - lastName
      type: object
      properties:
        id:
          type: string
          description: Unique identifier for the contact.
          format: uuid
          example: cc01d7c2-aa54-4504-8b98-28bd730d51d8
        salutation:
          type: string
          description: The contact salutation.
          example: Mr
          enum:
          - Mr
          - Mrs
          - Ms
          - Miss
          - Dr
          - Prof
        firstName:
          maxLength: 100
          minLength: 1
          type: string
          description: The first name of the contact.
          example: John
        middleName:
          maxLength: 100
          minLength: 1
          type: string
          description: The middle name of the contact.
          example: Robert
        lastName:
          maxLength: 100
          minLength: 1
          type: string
          description: The last name of the contact.
          example: Doe
        birthDate:
          type: string
          description: The contact date of birth.
          format: date
          example: 1997-12-15
        email:
          type: string
          description: The email address of the contact.
          format: email
          example: john.doe@example.com
        phoneNumber:
          type: string
          description: The phone number of the contact.
          example: 123-456-7890
        creationDateTime:
          type: string
          description: The timestamp the contact was created.
          format: date-time
          example: 2022-12-05T11:23:56.724Z
        lastUpdateDateTime:
          type: string
          description: The timestamp the contact was last updated.
          format: date-time
          example: 2022-12-07T14:35:00Z
    ContactRole:
      required:
      - accountId
      - contactId
      - contactRole
      type: object
      properties:
        id:
          type: string
          description: Unique identifier for the contact role.
          format: uuid
          example: a1234567-89b0-12d3-a456-426614174000
        contactId:
          maxLength: 36
          minLength: 36
          type: string
          description: The ID of the contact.
          example: cc01d7c2-aa54-4504-8b98-28bd730d51d8
        accountId:
          maxLength: 18
          minLength: 15
          type: string
          description: The ID of the account associated with the contact.
          example: 0017Q000009ZWn6QAG
        contactRole:
          type: string
          description: The role of the contact within the account.
          example: Employee
          enum:
          - Employee
          - Contractor
          - Partner
          - Supplier
        creationDateTime:
          type: string
          description: The timestamp the contact role was created.
          format: date-time
          example: 2022-12-05T11:23:56.724Z
        lastUpdateDateTime:
          type: string
          description: The timestamp the contact role was last updated.
          format: date-time
          example: 2022-12-07T14:35:00Z
    Error:
      required:
      - message
      type: object
      properties:
        Exception:
          maxLength: 1000
          type: string
          description: Error message detailing what went wrong.
          example: Internal server error
        Code:
          maxLength: 3
          minLength: 3
          type: string
          description: HTTP status code associated to the error.
          example: "500"
        TransactionId:
          maxLength: 50
          type: string
          description: "A unique identifier for the transaction, for debugging."
          example: APIGW:e632bb5e-bf09-473e-958c-0f2cc202bf42:621
